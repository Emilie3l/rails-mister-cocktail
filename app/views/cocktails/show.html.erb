
<div class="container-fluid">
  <div class="row">
    <div class="col-md-6">
      <h2 class="d-flex justify-content-between">
        <%= @cocktail.name %>
        <%= link_to icon('fas', 'plus', class: 'strong'), new_cocktail_dose_path(@cocktail), class: "btn btn-primary badge-pill pt-2 ml-5"  %>
      </h2>
      <ul class="list-group">
        <% @cocktail.doses.each do |dose| %>
          <li class="list-group-item">
            <%= dose.ingredient.name %> - Qty: <%= dose.description %>
            <%= link_to icon('far', 'trash-alt', class: 'strong'), dose, method: :delete, data: { confirm: "Are you sure?" } %>
          </li>
        <% end %>
      </ul>
    </div>
    <div class="col-md-6">
      <img class="cocktail-img" src="<%= @cocktail.image_url %>" alt="<%= @cocktail.name %>">
    </div>
  </div>
</div>
